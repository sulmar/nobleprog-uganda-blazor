@page "/products"
@inject IProductService Api

<h3>List of Products</h3>

<ListItemsComponent Items="@products" >
    <ItemTemplate>
        <li>@context.Code @context.Name @context.Description @context.Price</li>
    </ItemTemplate>
</ListItemsComponent>

@code {

    private List<Product> products;

    protected override async Task OnInitializedAsync()
    {
        products = await Api.GetAllAsync();
    }

}
